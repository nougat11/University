@model Blog111.Models.AdminViewModels.AboutViewModel
<div class="container-fluid">
    <h1 class="mt-4">Update</h1>
    <div class="row">
        <div class="col-lg-6">
            <div class="card mb-4">
                <form asp-controller="Admin" asp-action="UpdateAbout" method="post" enctype="multipart/form-data">
                    <div class="card-header">
                        <i class="fas fa-pen-fancy mr-1"></i>
                        Update Information
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label asp-for="HeaderImage"></label>
                            <input asp-for="HeaderImage" class="file-input" accept="image/*" />



                        </div>
                        <div class="form-group">
                            <label asp-for="Header"></label>
                            <input asp-for="Header" class="form-control" required />
                            <span asp-validation-for="Header" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Content"></label>
                            <textarea asp-for="Content" class="form-control textarea" rows="8"></textarea>
                            <span asp-validation-for="Content" class="text-danger"></span>
                        </div>

                    </div>
                    <div class="card-footer">
                        <div class="form-group">
                            <button class="btn btn-primary" type="submit">Submit</button>
                            <a asp-controller="Home" asp-action="Author" asp-route-authorId="@Model.user.Id" class="btn btn-secondary float-lg-right">View</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
