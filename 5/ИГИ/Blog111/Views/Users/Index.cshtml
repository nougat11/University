@model IEnumerable<Blog111.Entities.User>
@{
    ViewBag.Title = "Список пользователей";
}

<a asp-controller="Users" asp-action="Create">Добавить пользователя</a>

<table class="table">
    <tr><th>Email</th><th>First Name</th><th>Last Name</th><th></th></tr>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Email</td>
            <td>@user.FirstName</td>
            <td>@user.LastName</td>
            <td>
                <form asp-controller="Users" asp-action="Delete" asp-route-id="@user.Id" method="post">
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@user.Id">Изменить</a>
                    <button type="submit" class="btn btn-sm btn-danger">
                        Удалить
                    </button>
                </form>
            </td>
        </tr>
    }
</table>