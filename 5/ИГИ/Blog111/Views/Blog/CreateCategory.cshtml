@model Blog111.Models.BlogViewModels.CreateCategoryViewModel
<div class="container-fluid">
    <h1 class="mt-4">Create</h1>
    <div class="row">
        <div class="col-lg-6">
            <div class="card mb-4">
                <form asp-controller="Blog" asp-action="AddCategory" method="post" enctype="multipart/form-data">
                    <div class="card-header">
                        <i class="fas fa-pen-fancy mr-1"></i>
                        Write a Post
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label asp-for="BlogHeaderImage"></label>
                            <input asp-for="BlogHeaderImage" class="file-input" accept="image/*" />
                            <span asp-validation-for="BlogHeaderImage" class="text-danger"></span>


                        </div>
                        <div class="form-group">
                            <label asp-for="Category.Title"></label>
                            <input asp-for="Category.Title" class="form-control" required />
                            <span asp-validation-for="Category.Title" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Category.Description"></label>
                            <textarea asp-for="Category.Description" class="form-control textarea" rows="8"></textarea>
                            <span asp-validation-for="Category.Description" class="text-danger"></span>
                        </div>

                    </div>
                    <div class="card-footer">
                        <div class="form-group">
                            
                            <button class="btn btn-primary" type="submit">Submit</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
