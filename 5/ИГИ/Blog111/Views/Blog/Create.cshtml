@model Blog111.Models.BlogViewModels.CreateViewModel
<div class="container-fluid">
    <h1 class="mt-4">Create</h1>
    <div class="row">
        <div class="col-lg-6">
            <div class="card mb-4">
                <form asp-controller="Blog" asp-action="Add" method="post" enctype="multipart/form-data">
                    <div class="card-header">
                        <i class="fas fa-pen-fancy mr-1"></i>
                        Write a Post
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label asp-for="BlogHeaderImage"></label>
                            <input asp-for="BlogHeaderImage" class="file-input" accept="image/*" />
                            <span asp-validation-for="BlogHeaderImage" class="text-danger"></span>


                        </div>
                        <div class="form-group">
                            <label asp-for="Post.Title"></label>
                            <input asp-for="Post.Title" class="form-control" required />
                            <span asp-validation-for="Post.Title" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Post.Content"></label>
                            <textarea asp-for="Post.Content" class="form-control textarea" rows="8"></textarea>
                            <span asp-validation-for="Post.Content" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Post.category_string"></label>
                            <select asp-for="Post.category_string" asp-items="Model.Categories"></select>
                            
                        </div>

                    </div>
                    <div class="card-footer">
                        <div class="form-group">
                            <p class="text-muted">Publish now or save for later edits.</p>
                            <label>Publish now?</label>
                            <input type="checkbox" data-toggle="toggle" asp-for="Post.Published" />
                            <br>
                            <button class="btn btn-primary" type="submit">Submit</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
